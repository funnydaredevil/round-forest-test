<p id="notice"><%= notice %></p>

<h1>Listing Review Requests</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Search text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review_requests.each do |review_request| %>
      <tr>
        <td><%= review_request.product_id %></td>
        <td><%= review_request.search_text %></td>
        <td><%= link_to 'Show', review_request %></td>
        <td><%= link_to 'Edit', edit_review_request_path(review_request) %></td>
        <td><%= link_to 'Destroy', review_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review request', new_review_request_path %>
